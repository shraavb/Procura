# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/procura

# LLM - Required for agent functionality
ANTHROPIC_API_KEY=sk-ant-...

# Embeddings - Required for RAG/semantic search
OPENAI_API_KEY=sk-...

# Observability - Optional but recommended
LANGSMITH_API_KEY=ls-...
LANGSMITH_PROJECT=procura
LANGSMITH_TRACING=true

# Redis - Optional for task queue
REDIS_URL=redis://localhost:6379

# App Settings
DEBUG=false
DEMO_MODE=true

# Agent Settings
RAG_ENABLED=true
RAG_SIMILARITY_THRESHOLD=0.7
MATCH_CONFIDENCE_THRESHOLD=0.8

# Approval Thresholds
PO_APPROVAL_THRESHOLD=10000.0
